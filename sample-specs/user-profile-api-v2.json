{
  "openapi": "3.0.0",
  "info": {
    "title": "User Profile API",
    "version": "v2",
    "description": "An API for managing user profiles."
  },
  "servers": [
    {
      "url": "https://api.example.com/users/v2"
    }
  ],
  "paths": {
    "/users/{userId}": {
      "get": {
        "summary": "Get User Profile",
        "operationId": "getUserProfile",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A user profile.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserProfile"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UserProfile": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        }
      }
    }
  }
}